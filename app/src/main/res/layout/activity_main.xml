<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:orientation="vertical"
            android:background="@drawable/backapp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:visibility="visible"
                android:background="#30111111"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_home_profil"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat Pagi !"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="DUTA LANTANG M"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <!--<ImageView-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="70dp"-->
                    <!--android:layout_toStartOf="@+id/linear_status"-->
                    <!--android:layout_marginEnd="8dp"/>-->

                <LinearLayout
                    android:id="@+id/linear_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Status Absensi"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Hadir"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#30111111">

                <ImageView
                    android:id="@+id/logosmkmain"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logosmk"
                    android:layout_marginBottom="40dp"/>

                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/logosmkmain"-->
                <!--android:layout_width="2200dp"-->
                <!--android:layout_height="220dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_margin="20dp"-->
                <!--android:src="@drawable/logosmk" />-->

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logosmkmain"
                    android:text="E-ATTENDANCE"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/white"/>


                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="7dp">

                </ImageView>-->


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#30111111"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/hadir"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/kotak"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:paddingVertical="18dp"
                            android:src="@drawable/masukgrey"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Isi Kehadiran"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pulang"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:background="@drawable/kotak"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:paddingVertical="18dp"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/keluargrey"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pulang"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/logout"
                    android:layout_gravity="right"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/logout"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>